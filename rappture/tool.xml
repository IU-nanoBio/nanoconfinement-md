<?xml version="1.0"?>
<run>
    <tool>
        <title>Nanoconfinement MD</title>
        <about>Nanoconfinement tool enables users to explore the effects of nanoscale confinement on the distribution of
            ions
        </about>
        <command>python @tool/nanoconfinement-wrapper.py @driver</command>
    </tool>
    <input>
        <group id="physical">
            <about>
                <label>Physical</label>
                <description>Physical parameters specific to the material system</description>
            </about>
            <number id="salt_concentration">
                <about>
                    <label>Salt Concentration (M)</label>
                    <description>Salt concentration of the solution.</description>
                </about>
                <min>0.3</min>
                <max>0.9</max>
                <default>0.5</default>
            </number>
            <integer id="positive_valency">
                <about>
                    <label>Positive Ion Valency</label>
                    <description>Z+ Positive ion valency.</description>
                </about>
                <min>1</min>
                <max>3</max>
                <default>1</default>
                <preset>
                    <value>1</value>
                    <label>1(monovalent)</label>
                </preset>
                <preset>
                    <value>2</value>
                    <label>2(divalent)</label>
                </preset>
                <preset>
                    <value>3</value>
                    <label>3(trivalent)</label>
                </preset>
            </integer>
            <integer id="negative_valency">
                <about>
                    <label>Negative Ion Valency</label>
                    <description>Z- Negative ion valency.</description>
                </about>
                <min>-3</min>
                <max>-1</max>
                <default>-1</default>
                <preset>
                    <value>-1</value>
                    <label>-1</label>
                </preset>
                <preset>
                    <value>-2</value>
                    <label>-2</label>
                </preset>
                <preset>
                    <value>-3</value>
                    <label>-3</label>
                </preset>
            </integer>
            <number id="confinement_length">
                <about>
                    <label>Confinement Length (nm)</label>
                    <description>Confinement Length.</description>
                </about>
                <min>2</min>
                <max>4</max>
                <default>3</default>
            </number>
            <number id="ion_diameter">
                <about>
                    <label>Ion Diameter (nm)</label>
                    <description>Ion Diameter.</description>
                </about>
                <min>0.5</min>
                <max>0.8</max>
                <default>0.714</default>
            </number>
        </group>
        <group id="computing">
            <about>
                <label>Computing</label>
                <description>Computing parameters which effect algorithm</description>
            </about>
            <integer id="simulation_steps">
                <about>
                    <label>Simulation Steps</label>
                    <description>Number of Simulation Time Steps.</description>
                </about>
                <min>500000</min>
                <max>5000000</max>
                <default>1000000</default>
            </integer>
        </group>
    </input>
    <output>
        <curve id="energy">
            <about>
                <label>Energy Plot</label>
                <description>Energy Plot for verification</description>
            </about>
            <xaxis>
                <label>Energy</label>
                <description>Energy</description>
                <units>eV</units>
            </xaxis>
            <yaxis>
                <label>TimeSteps</label>
                <description>Timesteps</description>
            </yaxis>
        </curve>
    </output>
</run>
