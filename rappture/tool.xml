<?xml version="1.0"?>
<run>
    <tool>
        <title>Ions in Nanoconfinement</title>
        <about>This app enables users to explore the effects of nanoscale confinement on the distribution of
            ions
        </about>
        <command>python @tool/nanoconfinement-wrapper.py @driver</command>
    </tool>
    <input>
        <group id="physical">
            <about>
                <label>Physical</label>
                <description>Physical parameters specific to the material system</description>
            </about>
            <number id="salt_concentration">
                <about>
                    <label>Salt Concentration</label>
                    <description>Salt concentration of the solution</description>
                </about>
                <units>M</units>
                <min>0.3M</min>
                <max>0.9M</max>
                <default>0.5M</default>
            </number>
            <integer id="positive_valency">
                <about>
                    <label>Positive Ion Valency</label>
                    <description>Valency (charge) of the positive ions</description>
                </about>
                <min>1</min>
                <max>3</max>
                <default>1</default>
                <preset>
                    <value>1</value>
                    <label>1(monovalent)</label>
                </preset>
                <preset>
                    <value>2</value>
                    <label>2(divalent)</label>
                </preset>
                <preset>
                    <value>3</value>
                    <label>3(trivalent)</label>
                </preset>
            </integer>
            <integer id="negative_valency">
                <about>
                    <label>Negative Ion Valency</label>
                    <description>Valency (charge) of the negative ions</description>
                </about>
                <min>-3</min>
                <max>-1</max>
                <default>-1</default>
                <preset>
                    <value>-1</value>
                    <label>-1</label>
                </preset>
                <preset>
                    <value>-2</value>
                    <label>-2</label>
                </preset>
                <preset>
                    <value>-3</value>
                    <label>-3</label>
                </preset>
            </integer>
            <number id="confinement_length">
                <about>
                    <label>Confinement Length</label>
                    <description>Length of Nanoscale Confinement</description>
                </about>
                <units>nm</units>
                <min>2nm</min>
                <max>4nm</max>
                <default>3nm</default>
            </number>
            <number id="ion_diameter">
                <about>
                    <label>Ion Diameter</label>
                    <description>Diameter of Ions</description>
                </about>
                <units>nm</units>
                <min>0.5nm</min>
                <max>0.8nm</max>
                <default>0.714nm</default>
            </number>
        </group>
        <group id="computing">
            <about>
                <label>Computing</label>
                <description>Computing parameters related to the simulation</description>
            </about>
            <integer id="simulation_steps">
                <about>
                    <label>Simulation Steps</label>
                    <description>Number of Simulation Time Steps.</description>
                </about>
                <min>500000</min>
                <max>5000000</max>
                <default>1000000</default>
            </integer>
        </group>
    </input>
    <output>
        <curve id="positive_ion_density">
            <about>
                <label>Density of Positive Ions</label>
                <description>Distribution of positive ions confined within the nanoparticle surfaces</description>
            </about>
            <xaxis>
                <label>z</label>
                <description>Distance measure between the two Surfaces (z = 0 is the midpoint)</description>
                <units>nm</units>
            </xaxis>
            <yaxis>
                <label>Density</label>
                <description>Density distribution of ions</description>
                <units>M</units>
            </yaxis>
        </curve>
    </output>
</run>
